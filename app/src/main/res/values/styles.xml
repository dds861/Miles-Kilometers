<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textViews">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_text</item>


    </style>

    <style name="buttons">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:layout_margin">5dp</item>
        <item name="colorControlHighlight">@color/primary_text</item>
        <item name="colorButtonNormal">@color/secondary_text</item>
        <item name="android:textSize">20sp</item>


    </style>

    <style name="editTexts">

        <item name="android:padding">10dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:numeric">decimal</item>
        <item name="android:lines">3</item>
        <item name="android:textColor">@color/primary_text</item>


    </style>
</resources>
